{% block content %}
    <div class="teacher-help">
        <h1>{{ 'teacher.menu.help' | trans }}</h1>
        <div class="box">
            <section class="mb-8">
                <h2>🎬 {{ 'teacher.help.presentation' | trans }}</h2>
                <iframe width="100%" height="360" src="https://tube.switch.ch/embed/BZlQkxhMiF?title=hide"
